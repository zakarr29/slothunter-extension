{
    "manifest_version": 3,
    "name": "SlotHunter",
    "description": "Automate visa slot hunting. Never miss a slot again.",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "alarms",
        "notifications"
    ],
    "host_permissions": [
        "https://slothunter-backend.vercel.app/*",
        "https://*.vfsglobal.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.vfsglobal.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}